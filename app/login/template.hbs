<div class="hero">
  <div class="hero__inner">
    <div class="content">
      <h2 class="login-title">Login</h2>
      {{#simple-form onsubmit=(action "login") as |user|}}
        {{input class="userName" type="text" placeholder="Username" value=user.userName}}
        {{input class="password" type="password" placeholder="Password" value=user.password}}
      {{/simple-form}}
      <div class="btn-container">
        <div class="btn-container__left">
           {{#link-to "index" class="button-links button-links__back" }}
           <p class="button-links">BACK</p>
           {{/link-to}}
           <button class="button-links button-links__login" type="submit">LOGIN</button>
        </div>
         {{#link-to "register" class="button-links button-links__register" }}
         <p class="button-links">REGISTER</p>
         {{/link-to}}
      </div>

    </div>
  </div>
</div>

{{outlet}}
