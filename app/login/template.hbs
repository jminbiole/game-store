<div class="hero">
  <div class="hero__inner">
    <div class="content">
      <h2 class="login-title">Login</h2>
      {{#simple-form onsubmit=(action "login") as |user|}}
        {{input class="email" type="text" placeholder="Email" value=user.email}}
        {{input class="password" type="password" placeholder="Password" value=user.password}}
      <div class="btn-container">
        <div class="btn-container__left">
           {{#link-to "index" class="button-links button-links__back" }}
           <p class="button-links">BACK</p>
           {{/link-to}}
           {{#link-to "index" class="button-links button-links__login" }}
           <button class="button-links__submit" type="submit">LOGIN</button>
           {{/link-to}}
        </div>
         {{#link-to "register" class="button-links button-links__register" }}
         <button class="button-links__register" type="submit">REGISTER</button>
         {{/link-to}}
       </div>
       {{/simple-form}}

    </div>
  </div>
</div>
{{outlet}}
